<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yonyou.ssc.mapper.HotelMapper">
    <select id="selectHotelByCityId" resultType="Hotel">
        select * from hotel where city = #{id}
    </select>

    <insert id="saveHotel" useGeneratedKeys="true" keyProperty="city" parameterType="com.yonyou.ssc.entry.Hotel" >
        insert into hotel(name,zip,address) values(#{name,jdbcType=VARCHAR},#{zip,jdbcType=VARCHAR},#{address,jdbcType=VARCHAR})
    </insert>
</mapper>
